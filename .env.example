# Application
APP_ENV=development
SECRET_KEY=change-this-in-production-use-secrets.token_urlsafe-32
DEBUG=True

# Database - PostgreSQL (MELHOR PERFORMANCE!)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/autohighlights
# Formato: postgresql://user:password@host:port/database

# YouTube API (Get from: https://console.cloud.google.com/)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Gemini AI (Get from: https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Processing Config
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
MAX_WORKERS=2  # Processar 2 v√≠deos em paralelo (ajuste conforme CPU)
TEMP_DIR=./storage/temp

# Scheduler
MONITOR_FREQUENCY_HOURS=6
PROCESS_FREQUENCY_MINUTES=30
CLEANUP_TEMP_HOURS=24  # Limpar temp a cada 24h

# Storage Paths
STORAGE_ROOT=./storage
VIDEOS_DIR=./storage/videos
CLIPS_DIR=./storage/clips

# UI
STREAMLIT_PORT=8501
API_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/autohighlights.log

# Performance Tweaks
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
CACHE_TTL_SECONDS=3600
